<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:global="clr-namespace:"
        x:Class="CSIA.Views.MainWindow"
        Width="800"
        Height="600"
        Title="File Explorer"
        TransparencyLevelHint="AcrylicBlur"
        Background="#50410010"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="SystemChrome"
        WindowStartupLocation="CenterScreen"
        FontFamily="{StaticResource LexendFont}">
    <Grid>
        <Grid.RowDefinitions>
            <!-- Toolbar Row -->
            <RowDefinition Height="Auto"/>
            <!-- Breadcrumb and Back/Forward Row -->
            <RowDefinition Height="Auto"/>
            <!-- Main Content Row -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal"> <!-- Darker Toolbar Background -->
            <Button Content="Back" Name="BackButton" Margin="5" Background="#3A3A3A" Foreground="White"/> <!-- Dark Button with White Text -->
            <Button Content="Forward" Name="ForwardButton" Margin="5" Background="#3A3A3A" Foreground="White"/>
            <Button Content="Refresh" Name="RefreshButton" Margin="5" Background="#3A3A3A" Foreground="White"/>
            <Button Content="Open" Name="OpenButton" Margin="5" Background="#3A3A3A" Foreground="White"/>
            <Button Content="Host" Name="HostButton" Margin="5" Background="#3A3A3A" Foreground="White"/>
            <Button Content="Stop" Name="StopButton" Margin="5" Background="#3A3A3A" Foreground="White"/>
            <Button Theme="{StaticResource CloseButton}" BorderBrush="#5E1D2D" BorderThickness="2"/>
        </StackPanel>
        
        <!-- Breadcrumbs -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" x:DataType="global:MainWindowViewModel">
            <TextBlock Text="Breadcrumb: " VerticalAlignment="Center" Margin="5,5,0,5" Foreground="White"/> <!-- White Text for Breadcrumb -->
            <TextBlock Name="CurrentPath" VerticalAlignment="Center" Margin="0,5,5,5" Foreground="White"/> <!-- Binding with White Text -->
        </StackPanel>
        
        <Grid Grid.Row="2" Margin="5">
            <Grid.ColumnDefinitions>
                <!-- Directory Tree Sidebar -->
                <ColumnDefinition Width="250"/>
                <!-- File List Main Panel -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Directory Tree View -->
            <TreeView Name="DirectoryTreeView" Grid.Column="0" Margin="5" BorderBrush="Gray" BorderThickness="1" Foreground="White"/> <!-- Dark Background for TreeView -->

            <!-- File List View -->
            <ListBox Name="FileListBox" Grid.Column="1" Margin="5" BorderBrush="Gray" BorderThickness="1" Foreground="White"/> <!-- Dark Background for ListBox -->
        </Grid>
    </Grid>
</Window>
