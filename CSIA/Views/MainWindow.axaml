<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CSIA.ViewModels"
        xmlns:global="clr-namespace:"
        x:Class="CSIA.Views.MainWindow"
        x:DataType="global:MainWindowViewModel"
        Width="1000"
        Height="600"
        Title="File Explorer"
        Icon=""
        TransparencyLevelHint="AcrylicBlur"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        WindowStartupLocation="CenterScreen"
        FontFamily="{StaticResource LexendFont}"
        BorderThickness="0">
    <!-- <Window.DataContext> -->
    <!--     <global:MainWindowViewModel/> -->
    <!-- </Window.DataContext> -->
        
    <Grid>
        <Grid.RowDefinitions>
            <!-- Toolbar Row -->
            <RowDefinition Height="Auto"/>
            <!-- Breadcrumb and Back/Forward Row -->
            <RowDefinition Height="Auto"/>
            <!-- Main Content Row -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <!-- <Button Content="Back" Name="BackButton" Margin="5" Background="#753A3A3A" Foreground="White"/> -->
            <!-- <Button Content="Forward" Name="ForwardButton" Margin="5" Background="#753A3A3A" Foreground="White"/> -->
            <Button Content="Refresh" Name="RefreshButton" Classes="MenuButton" Margin="5" Theme="{StaticResource MenuBtton}"/>
            <Button Content="Host" Name="HostButton" Classes="MenuButton" Margin="5" Theme="{StaticResource MenuBtton}"/>
            <Button Content="Stop" Name="StopButton" Classes="MenuButton" Margin="5" Theme="{StaticResource MenuBtton}"/>
            <Button Content="Connect" Name="ConnectButton" Classes="MenuButton" Margin="5" Theme="{StaticResource MenuBtton}"/>
            <Button Content="test" Name="TestButton" Classes="MenuButton" Margin="5" Theme="{StaticResource MenuBtton}"/>
            
            <!-- BorderBrush="#5E1D2D" BorderThickness="2" -->
        </StackPanel>
        
        <Grid HorizontalAlignment="Right" Margin="0,0,15,0">
            <Button Name="CloseButton" Theme="{StaticResource CloseButton}"/>
        </Grid>
        <Grid HorizontalAlignment="Right" Margin="0,0,35,0">
            <Button Name="MaximButton" Theme="{StaticResource MaximButton}"/>
        </Grid>
        <Grid HorizontalAlignment="Right" Margin="0,0,55,0">
            <Button Name="MinimButton" Theme="{StaticResource MinimButton}"/>
        </Grid>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- Directory Tree Sidebar -->
                <ColumnDefinition Width="499"/>
                <!-- File List Main Panel -->
                <ColumnDefinition Width="499"/>
            </Grid.ColumnDefinitions>
            
            <!-- Breadcrumbz -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" x:DataType="global:MainWindowViewModel">
                <TextBlock Text="Breadcrumb: " VerticalAlignment="Center" Margin="25,5,0,5"/> <!-- White Text for Breadcrumb -->
                <TextBlock x:Name="CurrentLocalPath" Text="{Binding CurrentLocalPath}" VerticalAlignment="Center" Margin="0,5,5,5" Foreground="White"/> <!-- Binding with White Text -->
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" x:DataType="global:MainWindowViewModel">
                <TextBlock Text="Breadcrumb: " VerticalAlignment="Center" Margin="10,5,0,5"/> <!-- White Text for Breadcrumb -->
                <TextBlock x:Name="CurrentRemotePath" Text="{Binding CurrentRemotePath}" VerticalAlignment="Center" Margin="0,5,5,5" Foreground="White"/> <!-- Binding with White Text -->
            </StackPanel>
        </Grid>
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <!-- Directory Tree Sidebar -->
                <ColumnDefinition Width="499"/>
                <!-- File List Main Panel -->
                <ColumnDefinition Width="499"/>
            </Grid.ColumnDefinitions>

            <!-- Directory Tree View -->
            <!-- <TreeView Name="DirectoryTreeView" Grid.Column="0" Margin="25,0,10,25" Background="#35670019" BorderBrush="#258D0022" BorderThickness="2" Foreground="White"/> Dark Background for TreeView -->

            <!-- File List View -->
            <ListBox Grid.Column="0"
                     x:Name="LocalListBox"
                     ItemsSource="{Binding LocalItems}"
                     Margin="25,0,10,15" 
                     BorderThickness="2"
                     CornerRadius="7"
                     SelectionMode="Multiple">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Image Source="{Binding LocalIcon}" Width="50" Height="50" Margin="5"/>
                            <TextBlock Name="LocalListBoxItem" Text="{Binding LocalName}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <ListBox Name="RemoteListBox" 
                     ItemsSource="{Binding RemoteItems}" 
                     Grid.Column="1"
                     Margin="10,0,25,15" 
                     BorderThickness="2"
                     CornerRadius="7"
                     SelectionMode="Multiple">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Image Source="{Binding RemoteIcon}" Width="50" Height="50" Margin="5"/>
                            <TextBlock Name="RemoteListBoxItem" Text="{Binding RemoteName}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <!-- Directory Tree Sidebar -->
                <ColumnDefinition Width="499"/>
                <!-- File List Main Panel -->
                <ColumnDefinition Width="499"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" Name="UploadButton" Classes="ActionButton" Theme="{StaticResource UploadButton}" Margin="5,-10,10,5" HorizontalAlignment="Right" VerticalAlignment="Top"/>
            <Button Grid.Column="0" Name="LocalFolderAddButton" Classes="ActionButton" Theme="{StaticResource FolderAddButton}" Margin="5,-10,50,5" HorizontalAlignment="Right" VerticalAlignment="Top"/>
            <Button Grid.Column="0" Name="LocalDeleteButton" Classes="ActionButton" Theme="{StaticResource DeleteButton}" Margin="5,-10,90,5" HorizontalAlignment="Right" VerticalAlignment="Top"/>
            
            <Button Grid.Column="1" Name="DownloadButton" Classes="ActionButton" Theme="{StaticResource DownloadButton}" Margin="10,-10,0,5" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Button Grid.Column="1" Name="RemoteFolderAddButton" Classes="ActionButton" Theme="{StaticResource FolderAddButton}" Margin="50,-10,10,5" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Button Grid.Column="1" Name="RemoteDeleteButton" Classes="ActionButton" Theme="{StaticResource DeleteButton}" Margin="90,-10,10,5" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Grid>
        
    </Grid>
</Window>