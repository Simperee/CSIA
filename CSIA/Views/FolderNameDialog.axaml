<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:global="clr-namespace:"
        x:Class="CSIA.Views.FolderNameDialog"
        Title="Custom Dialog"
        Icon=""
        TransparencyLevelHint="AcrylicBlur"
        Background="#50410010"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        WindowStartupLocation="CenterScreen"
        FontFamily="{StaticResource LexendFont}"
        BorderThickness="0"
        Width="350" Height="130">
    <StackPanel Margin="10">
        <TextBlock Text="Folder Name:"/>
        <TextBox Name="InputTextBox" Margin="0,10,0,0" Width="310" Height="30"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="AddButton" Content="Add" Width="75" Margin="0,0,10,0"/>
            <Button Name="CancelButton" Content="Cancel" Width="75"/>
        </StackPanel>
    </StackPanel>
</Window>